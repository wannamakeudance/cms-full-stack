<section class="article-list-container">
    <div class="flex items-center ml-14 articles-filter">
        <span class="font-bold text-2xl text-zinc-500">Sorting by:</span>
        <button class="sort-option sort-selected ml-10" 
            id="sort-new">Newest</button>
        <button class="sort-option" id="sort-old">Oldest</button>
        {{#if showUserName}}
        <button class="sort-option" id="sort-username">Username</button>
        {{/if}}
        <button class="sort-option" id="sort-title">Title</button>
    </div>
    {{#if articleList.length}}
        <section id="artiles-list">
            {{#each articleList}}
                {{> article-card}}
            {{/each}}
        </section>
    {{else}}
        <h4 class="empty-tips">
            Empty content.<br>
            {{#if isCurrentUser}}
            <a href="/newarticle">
                Please create articles.
            </a>   
            {{/if}}
        </4>
    {{/if}}
</section>
