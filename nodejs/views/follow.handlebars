{{> header}}
<div class="flex w-2/3 mx-auto mt-36">
    {{> profile-sidebar}}
    <div class="flex-1 min-h-screen ml-10 pt-10 shadow-3xl bg-zinc-100">
        {{#if allUsersSubscribedTo}}
            {{#each allUsersSubscribedTo}}
            <div class="flex shadow-lg items-center w-3/4 mx-auto px-16 py-5 hover:shadow-gray-400 bg-teal-50">
                <img src="{{this.AvatarPath}}" alt="" class="rounded-full w-16 shadow-xl mr-10">
                <div>
                    <a href="/accountcenter?username={{this.SubscribedTo}}" class="font-bold text-2xl mb-4">
                        {{this.SubscribedTo}}
                    </a>
                    <p>{{this.AboutMeDescription}}</p>
                </div>
            </div>
            {{/each}}
        {{else}}
        <p class="text-2xl  text-gray-500 text-center mt-20">
            Followers / Followings are empty.
        </p>
        {{/if}}
    </div>
</div>
