                            <div class="text-right text-smaller text-lightgray mt-1">
                                <input type="submit" value="Post" class="button button-3d button-mini button-light">
                            </div>
                        </form>
                    </div>
                    {{/if}}
                </div>
            </div>
            {{/if}}
            {{#if this.layer2}}
