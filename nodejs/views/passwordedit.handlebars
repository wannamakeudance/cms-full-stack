{{> header}}
<section class="login-container bg-cover password-edit-container bg-[url('/images/login.jpeg')] h-screen pt-40" 
    id="accountForm">
    <form action="/passwordedit" method="post" class="box-shadow-basic bg-white w-2/5 mx-auto flex flex-col">
        <h3 class="text-2xl font-bold text-center mt-12 text-gray-500">Edit Password</h3>
        {{> form-error-message}}
        <input required type="password" name="password"
            placeholder="enter the new password"
            class="
            mt-5
            block
            w-4/5
            mx-auto
            px-0.5
            border-0 border-b-2 border-gray-200
            focus:ring-0 focus:border-black
            leading-10
        ">
        <input required type="password" 
            placeholder="enter the new password again"
            class="
                mt-5
                block
                w-4/5
                mx-auto
                px-0.5
                border-0 border-b-2 border-gray-200
                focus:ring-0 focus:border-black
                leading-10"
        >
        <button type="submit" class="basic-btn my-10 w-2/5 mx-auto">submit</button>
    </form>
</section>
