<section class="login-container bg-cover h-screen flex items-center justify-center">
    <form action="/login" method="post" class="box-shadow-basic w-1/3 p-10 bg-white text-center">
        <h3 class="text-xl font-bold">Account Login</h3>
         {{#if toastMessage}}
            <p class="text-red-600">{{toastMessage}}</p>
        {{/if}}
        <input required type="text" name="username" placeholder="username"
        class="
            mt-5
            block
            w-5/6
            mx-auto
            px-0.5
            border-0 border-b-2 border-gray-200
            focus:ring-0 focus:border-black
            leading-10
        ">
        <input required type="password" name="password" placeholder="password"
        class="
            mt-5
            block
            w-5/6
            mx-auto
            px-0.5
            border-0 border-b-2 border-gray-200
            focus:ring-0 focus:border-black
            leading-10"
        >
        <button type="submit" class="basic-btn mt-10 mr-5">submit</button>
        <a href="/signup">Sign Up</a>
    </form>
</section>
